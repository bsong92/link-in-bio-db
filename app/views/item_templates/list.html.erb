<!-- app/views/item_templates/list.html.erb -->

<h1>Brian Song</h1>

<div class="main-container">
    <div class="image-row">
      <img class="avatar-image" src="/Thumbnails/Safari Photo.jpg" alt="Brian in Tanzania">
    </div>

    <div class="name-row">
      Brian Song
    </div>

    <div class="social-icons-row">
      <a href="https://github.com/bsong92" target="_blank">
        <i class="fa-brands fa-github"></i> GitHub
      </a>

      <a href="https://www.linkedin.com/in/brian-c-song/" target="_blank">
        <i class="fa-brands fa-linkedin"></i>LinkedIn
      </a>

      <a href="https://www.instagram.com/bsong0517/" target="_blank">
        <i class="fa-brands fa-instagram"></i>Instagram
      </a>

      <a href="https://x.com/BrianCSong" target="_blank">
        <i class="fa-brands fa-x-twitter"></i>Twitter (X)
      </a>

    </div>

<div class="links-row">
  <% @list_of_items.each do |the_item| %>
    <div class="item">
      <img src="<%= the_item.thumbnail_url %>" class="thumbnail">

      <a class="link-text" target="_blank" href="<%= the_item.link_url %>">
        <%= the_item.link_description %>
      </a>
    </div>
  <% end %>
</div>

</div>
